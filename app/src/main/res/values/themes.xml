<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.EManager" parent="Base.Theme.EManager" />

    <style name="App.CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/darkBlue</item>
    </style>
    <style name="Theme.YourAppName" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ... other theme attributes ... -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.YourAppName.HeadlineLarge
        </item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.YourAppName.BodyMedium</item>
        <!-- Add more typography attributes -->
    </style>

    <style name="TextAppearance.YourAppName.HeadlineLarge"
        parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.YourAppName.BodyMedium"
        parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Futuristic Text Input Theme -->
    <style name="FuturisticTextInputTheme" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Calendar Styles -->
    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="CalendarTheme" parent="Theme.Material3.DayNight">
        <item name="android:colorAccent">@color/accent_cyan</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Custom Tab Text Style -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>